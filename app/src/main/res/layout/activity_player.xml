<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"
        app:show_shuffle_button="false"
        app:show_subtitle_button="false" />

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="#44000000">

            <ImageButton
                android:id="@+id/btn_fullscreen"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_fullscreen"
                android:contentDescription="Fullscreen" />

            <ImageButton
                android:id="@+id/btn_speed"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_speed"
                android:contentDescription="Playback speed" />

            <ImageButton
                android:id="@+id/btn_lock"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_lock_open"
                android:contentDescription="Lock controls" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_skip_back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_skip_back"
                android:contentDescription="Skip back" />

            <ImageButton
                android:id="@+id/btn_skip_forward"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_skip_forward"
                android:contentDescription="Skip forward" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="#44000000"
            android:layout_above="@id/bottom_bar"
            android:layoutDirection="ltr" >

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="#FFFFFF"
                android:paddingEnd="8dp"
                android:textSize="13sp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progressTint="#0091EA"
                android:thumbTint="#0091EA" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="#FFFFFF"
                android:paddingStart="8dp"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play"
            android:contentDescription="Play/Pause" />

        <TextView
            android:id="@+id/tv_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/brightness_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="4dp"
            android:layout_height="500dp" android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:progress="50"
            android:progressTint="@color/white"
            android:rotation="90"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/volume_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="4dp"
            android:layout_height="500dp" android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:progress="50"
            android:progressTint="@color/white"
            android:rotation="90"
            android:visibility="gone" />
    </RelativeLayout>
</FrameLayout>