<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Amine</item>
    </style>

    <!-- ▼▼▼ RENAMED FROM Theme.MyPlayer TO Theme.Amine ▼▼▼ -->
    <style name="Theme.Aminep" parent="Theme.Material3.DayNight">
    </style>

    <!-- ▼▼▼ RENAMED FROM Theme.MyPlayer.Player TO Theme.Amine.Player ▼▼▼ -->
    <style name="Theme.Amine.Player" parent="Theme.Material3.DayNight">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Amine.Blue" parent="Theme.Amine">
        <item name="colorPrimary">@color/blue_primary</item>
    </style>

    <style name="Theme.Amine.Green" parent="Theme.Amine">
        <item name="colorPrimary">@color/green_primary</item>
    </style>
</resources>